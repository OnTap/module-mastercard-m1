<config>
    <modules>
        <Mastercard_Mpgs>
            <version>1.2.1.3</version>
        </Mastercard_Mpgs>
    </modules>
    <global>
        <models>
            <mpgs>
                <class>Mastercard_Mpgs_Model</class>
            </mpgs>
        </models>
        <blocks>
            <mpgs>
                <class>Mastercard_Mpgs_Block</class>
            </mpgs>
        </blocks>
        <helpers>
            <mpgs>
                <class>Mastercard_Mpgs_Helper</class>
            </mpgs>
        </helpers>
        <resources>
            <mpgs_setup>
                <setup>
                    <module>Mastercard_Mpgs</module>
                    <class>Mage_Sales_Model_Resource_Setup</class>
                </setup>
            </mpgs_setup>
        </resources>
        <events>
            <sales_order_payment_save_before>
                <observers>
                    <mastercard_mpgs_model_observer>
                        <type>model</type>
                        <class>mpgs/observer</class>
                        <method>updateResultCode</method>
                    </mastercard_mpgs_model_observer>
                </observers>
            </sales_order_payment_save_before>
            <payment_info_block_prepare_specific_information>
                <observers>
                    <mastercard_mpgs_model_observer>
                        <type>model</type>
                        <class>mpgs/observer</class>
                        <method>paymentInfoBlockPrepareSpecificInformation</method>
                    </mastercard_mpgs_model_observer>
                </observers>
            </payment_info_block_prepare_specific_information>
            <sales_order_load_after>
                <observers>
                    <mastercard_mpgs_model_observer>
                        <type>model</type>
                        <class>mpgs/observer</class>
                        <method>addExtraInfoOrder</method>
                    </mastercard_mpgs_model_observer>
                </observers>
            </sales_order_load_after>
        </events>
        <Mastercard>
            <transaction>
                <types>
                    <auth>
                        <code>authorize</code>
                        <name>Authorise Only</name>
                        <order>0</order>
                    </auth>
                    <pre>
                        <code>authorize_capture</code>
                        <name>Authorise and Capture</name>
                        <order>10</order>
                    </pre>
                </types>
            </transaction>
            <endpoints>
                <europe>
                    <name>Europe</name>
                    <url>https://eu-gateway.mastercard.com/</url>
                </europe>
                <asiapacific>
                    <name>Asia Pacific</name>
                    <url>https://ap-gateway.mastercard.com/</url>
                </asiapacific>
                <northamerica>
                    <name>North America</name>
                    <url>https://na-gateway.mastercard.com/</url>
                </northamerica>
                <australia>
                    <name>UAT</name>
                    <url>https://mtf.gateway.mastercard.com/</url>
                </australia>
                <other>
                    <name>Other</name>
                    <url>custom</url>
                </other>
            </endpoints>
        </Mastercard>
    </global>
    <adminhtml>
        <events>
            <controller_action_predispatch>
                <observers>
                    <mastercard_mpgs_admin_notifications>
                        <type>model</type>
                        <class>mpgs/observer</class>
                        <method>checkNotificationsPreDispatch</method>
                    </mastercard_mpgs_admin_notifications>
                </observers>
            </controller_action_predispatch>
        </events>
    </adminhtml>
    <frontend>
        <routers>
            <checkout>
                <args>
                    <modules>
                        <mpgs before="Mage_Checkout">Mastercard_Mpgs</mpgs>
                    </modules>
                </args>
            </checkout>
            <mastercard>
                <use>standard</use>
                <args>
                    <module>Mastercard_Mpgs</module>
                    <frontName>mastercard</frontName>
                </args>
            </mastercard>
        </routers>
        <translate>
            <modules>
                <Mastercard_Mpgs>
                    <files>
                        <default>Mastercard_Mpgs.csv</default>
                    </files>
                </Mastercard_Mpgs>
            </modules>
        </translate>
        <layout>
            <updates>
                <mpgs>
                    <file>Mastercard.xml</file>
                </mpgs>
            </updates>
        </layout>
    </frontend>
    <default>
        <mastercard>
            <adminnotification>
                <feed_url>https://raw.githubusercontent.com/Mastercard-Gateway/gateway-modules-common/master/magento1.rss</feed_url>
                <frequency>1</frequency>
            </adminnotification>
        </mastercard>
        <payment>
            <Mastercard_hosted>
                <model>mpgs/method_hosted</model>
                <active>0</active>
                <payment_action>authorize</payment_action>
                <title>Credit Card (Hosted)</title>
                <api_username/>
                <api_password/>
                <end_point_url>https://eu-gateway.mastercard.com/</end_point_url>
                <webhook_secret/>
                <webhook_url/>
                <debug>0</debug>
                <test>0</test>
                <order_status>processing</order_status>
                <currency>USD</currency>
                <allowspecific>0</allowspecific>
                <send_line_items>1</send_line_items>
            </Mastercard_hosted>
            <Mastercard_form>
                <model>mpgs/method_form</model>
                <active>0</active>
                <payment_action>authorize</payment_action>
                <title>Credit Card (Form)</title>
                <api_username/>
                <api_password/>
                <end_point_url>https://eu-gateway.mastercard.com/</end_point_url>
                <webhook_secret/>
                <webhook_url/>
                <save_card>0</save_card>
                <save_card_use_cvv>1</save_card_use_cvv>
                <three_d_secure>1</three_d_secure>
                <debug>0</debug>
                <test>0</test>
                <order_status>processing</order_status>
                <currency>USD</currency>
                <allowspecific>0</allowspecific>
                <send_line_items>1</send_line_items>
            </Mastercard_form>
        </payment>
    </default>
</config>
